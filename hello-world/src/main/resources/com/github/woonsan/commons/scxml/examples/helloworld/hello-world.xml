<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0"
       datamodel="jexl"
       initial="Start">

  <datamodel>
    <data id="message" expr="&quot;Sorry, I do not know you!&quot;" />
  </datamodel>

  <state id="Start">
    <onentry>
      <assign location="message" expr="&quot;Hello, mate!&quot;" />
    </onentry>
    <transition target="Greeting" />
  </state>

  <state id="Greeting">
    <onentry>
      <log expr="message" />
    </onentry>
    <transition target="End" />
  </state>

  <final id="End">
  </final>

</scxml>